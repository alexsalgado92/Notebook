<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginStart="10dp">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/p"
        android:id="@+id/listItemNoteImg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/listItemNoteImg"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginBottom="2dp"
        android:id="@+id/listItemNoteTitle"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Text fjdjdjdjdjjddjdjdjdjdjdjdjdjsjsjejejejdkdkdkdkdodkfkfkckckfkdkekekrkfkgkfkfkdkskekekrkfkfkf"
        android:id="@+id/listItemNoteBody"
        android:layout_below="@id/listItemNoteTitle"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/listItemNoteImg"
        android:ellipsize="end"
        android:singleLine="true"/>

</RelativeLayout>
